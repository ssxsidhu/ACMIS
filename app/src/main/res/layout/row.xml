    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:background="@drawable/background_row_item"
        android:minHeight="88dp">

        <View
            android:id="@+id/centerShim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/list_top_text_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toStartOf="@id/centerShim"
            android:gravity="start"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/mtrl_list_item_tint" />

        <TextView
            android:id="@+id/list_middle_text_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_top_text_left"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toStartOf="@id/centerShim"
            android:gravity="start"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="@color/mtrl_list_item_tint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_bottom_text_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_middle_text_left"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toStartOf="@id/centerShim"
            android:gravity="start"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/mtrl_list_item_tint" />

        <ImageView
            android:id="@+id/list_icon"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/airplane_logo"
            android:padding="16dp" />

        <TextView
            android:id="@+id/list_extra_text_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_bottom_text_left"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toStartOf="@id/centerShim"
            android:gravity="start"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/mtrl_list_item_tint" />


        <!--    <ImageView-->
        <!--        android:id="@+id/list_icon"-->
        <!--        android:layout_width="80dp"-->
        <!--        android:layout_height="90dp"-->
        <!--        android:layout_marginTop="5dp"-->
        <!--        android:layout_centerHorizontal="true"-->
        <!--        android:padding="16dp"-->
        <!--        android:contentDescription="@string/airplane_logo" />-->

        <TextView
            android:id="@+id/list_top_text_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/centerShim"
            android:gravity="center|end"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/mtrl_list_item_tint"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/list_middle_text_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_top_text_right"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/centerShim"
            android:gravity="center|end"
            android:maxLines="1"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="@color/mtrl_list_item_tint"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/list_bottom_text_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_middle_text_right"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/centerShim"
            android:gravity="center|end"
            android:maxLines="1"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/mtrl_list_item_tint"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/list_extra_text_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_bottom_text_right"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/centerShim"
            android:gravity="center|end"
            android:maxLines="1"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="5dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/mtrl_list_item_tint"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>


</LinearLayout>