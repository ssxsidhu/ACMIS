    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:id="@+id/date_divider"
            android:layout_width="4dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:background="?android:attr/listDivider"/>

        <TextView
            android:id="@+id/frontDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/date_divider"
            android:gravity="center"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="@color/mtrl_list_item_tint"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/frontMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frontDate"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/date_divider"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:textSize="17sp"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="@color/mtrl_list_item_tint" />

        <TextView
            android:id="@+id/frontYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frontMonth"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_toStartOf="@id/date_divider"
            android:maxLines="1"

            android:paddingTop="5dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/mtrl_list_item_tint"
            android:textStyle="bold" />


    </RelativeLayout>






