<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="200dp"
        android:height="100dp"
        android:gravity="center">
        <rotate
            android:fromDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="1dp"
                    android:color="@color/md_theme_light_primary" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="center"
        android:bottom="200dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/md_theme_light_primary" />
            <solid android:color="@color/design_default_color_background" />
        </shape>
    </item>

    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="center"
        android:top="200dp">
        <shape android:shape="oval">
            <stroke
                android:width="0.7dp"
                android:color="@color/md_theme_dark_shadow" />
            <solid android:color="@color/md_theme_dark_shadow" />
        </shape>
    </item>
</layer-list>